        "def normalize(text):\n",
        "    text = ' '.join(text)  \n",
        "    text = normalize_alef_maksura_ar(text)\n",
        "    text = normalize_alef_ar(text)\n",
        "    text = normalize_teh_marbuta_ar(text)\n",
        "    return text\n",
        "  \n",
        "data_cleaned.text = data_cleaned.text.apply(normalize)\n",
        "data_cleaned"
      ]
