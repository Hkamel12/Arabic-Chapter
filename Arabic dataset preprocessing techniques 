      "source": [
        "def lemmatize_arabic_text(text):\n",
        "    if isinstance(text, str) or isinstance(text, bytes):\n",
        "        words = word_tokenize(text)\n",
        "        words = [stem(word) for word in words]\n",
        "        lemmatized_sentence = \" \".join(words)\n",
        "        return lemmatized_sentence\n",
        "    else:\n",
        "        return text\n",
        "\n",
        "data_cleaned['text'] = data_cleaned['text'].apply(lemmatize_arabic_text)\n",
        "data_cleaned"
      ]
