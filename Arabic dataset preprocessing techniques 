      "source": [
        "from nltk.corpus import stopwords\n",
        "stop_words = set(stopwords.words('arabic'))\n",
        "\n",
        "def remove_stopwords(text):\n",
        "    text = ' '.join(text)  \n",
        "    words = text.split()  \n",
        "    clean_words = [word for word in words if not word in stop_words]\n",
        "    return clean_words"
      ]
    },
