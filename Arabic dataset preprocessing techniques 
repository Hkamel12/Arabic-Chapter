      "source": [
        "def remove_non_arabic_symbols(df, column):\n",
        "    pattern = r'[^\\u0600-\\u06FF\\s]+'\n",
        "    df[column] = df[column].apply(lambda x: re.sub(pattern, '', x))\n",
        "\n",
        "    return df"
      ]
    },
