        "import farasa\n",
        "\n",
        "farasa.init_farasa_segmenter()\n",
        "farasa.init_farasa_morpho_analyzer()\n",
        "\n",
        "def tag_arabic_pos(text):\n",
        "    words = farasa.segment(text)\n",
        "    analyses = farasa.morphological_analyzer(words)\n",
        "    pos_tags = [analysis.pos for analysis in analyses]\n",
        "    return pos_tags\n",
        "data_cleaned['pos_tags'] = data_cleaned['text'].apply(tag_arabic_pos)"
      ]
